    "activityBarBadge.background": "#e896d5",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#217c98",
    "statusBar.background": "#185a6e",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#217c98",
    "statusBarItem.remoteBackground": "#185a6e",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#185a6e",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#185a6e99",
    "titleBar.inactiveForeground": "#e7e7e799"
},
  "peacock.color": "#185a6e"
}
